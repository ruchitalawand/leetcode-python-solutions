# Subsets

class Solution:
    def subsets(self, nums):
        res = []

        def backtrack(start, path):
            # Add the current subset (copy)
            res.append(path[:])
            
            # Explore further subsets
            for i in range(start, len(nums)):
                path.append(nums[i])
                backtrack(i + 1, path)
                path.pop()  # backtrack

        backtrack(0, [])
        return res
